<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.data_compression"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="29" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/icon_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.data_compression.lz7"
            android:label="LZ77 Coding Technique"
            android:theme="@style/top" >
        </activity>
        <activity
            android:name="com.example.data_compression.gulumb"
            android:background="@color/colorAccent"
            android:label="Goulumb Coding Technique"
            android:theme="@style/top" />
        <activity
            android:name="com.example.data_compression.arithmatic"
            android:background="@color/colorAccent"
            android:label="Arithmatic Coding Technique"
            android:theme="@style/top" />
        <activity
            android:name="com.example.data_compression.Huffman"
            android:background="@color/colorAccent"
            android:label="Huffman Coding Technique"
            android:theme="@style/top" />
        <activity
            android:name="com.example.data_compression.LosslessCompression"
            android:background="@color/colorAccent"
            android:label="Lossless Compression Methods"
            android:theme="@style/top" />
        <activity
            android:name="com.example.data_compression.MainActivity"
            android:label="LOSSLESS Compression"
            android:theme="@style/top" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>